#:kivy 1.0

<calc>:
    orientation: 'vertical'
    Label:
        id: screen
        text: ""
        size_hint: 1, .25
    BoxLayout:
        id: 'button pad'
        orientation: 'vertical'
        size_hint: 1,.75
        GridLayout:
            id: 'upper buttons'
            size_hint:1, .8
            cols: 4
            Button:
                id: '7'
                text: '7'
                on_release: root.enter_button('7')
            Button:
                id: '8'
                text: '8'
                on_release: root.enter_button('8')
            Button:
                id: '9'
                text: '9'
                on_release: root.enter_button('9')
            Button:
                id: 'C'
                text: 'C'
                on_release: root.enter_button('C')
            Button:
                id: '4'
                text: '4'
                on_release: root.enter_button('4')
            Button:
                id: '5'
                text: '5'
                on_release: root.enter_button('5')
            Button:
                id: '6'
                text: '6'
                on_release: root.enter_button('6')
            Button:
                id: '/'
                text: '/'
                on_release: root.enter_button('/')
            Button:
                id: '1'
                text: '1'
                on_release: root.enter_button('1')
            Button:
                id: '2'
                text: '2'
                on_release: root.enter_button('2')
            Button:
                id: '3'
                text: '3'
                on_release: root.enter_button('3')
            Button:
                id: 'x'
                text: 'x'
                on_release: root.enter_button('x')
            Button:
                id: 'about'
                text: 'About'
                on_release: root.enter_button('about')
            Button:
                id: '0'
                text: '0'
                on_release: root.enter_button('0')
            Button:
                id: '.'
                text: '.'
                on_release: root.enter_button('.')
            Button:
                id: '-'
                text: '-'
                on_release: root.enter_button('-')
        BoxLayout:
            id: 'lower buttons'
            size_hint: 1, 1
            orientation: 'horizontal'
            size_hint: 1, .2
            Button:
                id: '='
                size_hint: .50, 1
                text: '='
                on_release: root.process(' ')
            Button:
                id: '<'
                size_hint: .25, 1
                text: '<'
                on_release: root.enter_button('<')
            Button:
                id: '+'
                size_hint: .25, 1
                text: '+'
                on_release: root.enter_button('+')
